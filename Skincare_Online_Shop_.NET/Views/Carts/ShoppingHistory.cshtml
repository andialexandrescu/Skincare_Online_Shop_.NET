@if (ViewBag.Message != null)
{
    <div class="p-3 rounded-3 text-center mb-5 @ViewBag.Alert">
        @ViewBag.Message
    </div>
}

<div class="row">

    @foreach (var cart in ViewBag.AllCarts)
    {
        <div class="col-4 mb-4">
            <div class="card">
                <div class="card-body">

                    <h5 class="card-title" name="Date">@cart.Date</h5>

                    @if (ViewBag.EsteAdmin)
                    {
                        <div><i class="bi bi-person">Created by: </i> @cart.User.UserName</div>
                    }
                    <br />

                    <a asp-controller="Carts" asp-action="Details" asp-route-id="@cart.Id" class="btn alert-success">Display shopping cart contents</a>

                </div>
            </div>
        </div>
    }

</div>