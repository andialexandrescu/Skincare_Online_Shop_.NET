@model Skincare_Online_Shop_.NET.Models.Category

<h2>Create a New Category</h2>

<form asp-action="Create" asp-controller="Categories" method="post">

    <div class="form-group">
        <label asp-for="CategoryName" class="form-label">Category name</label>
        <br />
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>

    <br /><br />
    <button class="btn btn-success" type="submit">Submit category</button>
</form>