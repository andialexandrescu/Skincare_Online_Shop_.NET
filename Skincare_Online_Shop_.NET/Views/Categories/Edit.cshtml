@model Skincare_Online_Shop_.NET.Models.Category

@{
    ViewBag.Title = "Edit the category";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" asp-controller="Categories" asp-route-id="@Model.Id" method="post">

    <div class="form-group">
        <label asp-for="CategoryName" class="form-label">Category name</label>
        <br />
        <input asp-for="CategoryName" class="form-control" />
        <span asp-validation-for="CategoryName" class="text-danger"></span>
    </div>

    <br />

    <button class="btn btn-success" type="submit">Modify the category</button>

</form>